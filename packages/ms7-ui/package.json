{
  "private": true,
  "name": "@ms7/ui",
  "version": "0.0.1",
  "description": "React UI library based on boostrap",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "postbuild": "uglifycss src/lib/css/common.css --output dist/common.min.css && cp src/lib/css/common.css dist/ && uglifycss src/lib/css/style-default.css --output dist/style-default.min.css && cp src/lib/css/style-default.css dist/",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@ms7/common": "*",
    "@types/bootstrap": "^5.2.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "bootstrap": "^5.2.0",
    "eslint": "^8.20.0",
    "i18next": "^21.8.14",
    "react": "^18.0.0",
    "react-bootstrap": "^2.4.0",
    "react-i18next": "^11.18.3",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "styled-components": "^5.3.5",
    "tsup": "^6.2.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/jest": "^28.1.6",
    "babel-loader": "^8.2.5",
    "jest": "^28.1.3",
    "jest-each": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-svg-transformer": "^1.0.0",
    "ts-config-lib": "*",
    "ts-jest": "^28.0.7",
    "uglifycss": "^0.0.29"
  },
  "publishConfig": {
    "access": "public"
  }
}
