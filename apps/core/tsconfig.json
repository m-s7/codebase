{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "react core",
  "extends": "ts-config-react/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@": ["src/"],
      "@/*": ["src/*"],
      "Dummy": ["src/apps/dummy"],
      "Dummy/*": ["src/apps/dummy/*"],
      "Map": ["src/apps/map"],
      "Map/*": ["src/apps/map/*"]
    },
    "types": [
      "node",
      "webpack-env",
      "@types/jest"
    ]
  },
  "include": ["src"]
}
